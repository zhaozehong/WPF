<Window x:Class="JM.Software.WPF.Window2"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:WPF.UserControls;assembly=UserControls"
        mc:Ignorable="d" SizeToContent="WidthAndHeight" ResizeMode="NoResize" Width="30" Height="30"
        Title="Window2">
  <!--<Grid Background="Black">
    <userControls:CalculatorKeyboard ButtonSize="60"/>
  </Grid>-->
  <Grid Background="Black">
    <Grid.RowDefinitions>
      <RowDefinition Height="100"/>
      <RowDefinition Height="*"/>
      <RowDefinition Height="Auto"/>
      <RowDefinition Height="Auto"/>
    </Grid.RowDefinitions>
    

    <TextBox Grid.Row="2"/>
    <TextBox Grid.Row="3" Name="tbInput"/>
    
    <!--<userControls:PopupEx x:Name="pop1" Topmost="False" StaysOpen="True" PopupAnimation="Slide" AllowsTransparency="False"
                              IsOpen="{Binding ElementName=tbInput, Path=IsFocused, Mode=OneWay}"
                              PlacementTarget="{Binding ElementName=tbInput}" Placement="Top">
      <userControls:CalculatorKeyboard Grid.Row="1"/>
    </userControls:PopupEx>-->
    <userControls:PopupEx Topmost="False" StaysOpen="True" PopupAnimation="Slide" AllowsTransparency="False"
                          IsOpen="{Binding ElementName=tbInput, Path=IsFocused, Mode=OneWay}"
                          PlacementTarget="{Binding ElementName=tbInput}" Placement="Top">
      <userControls:CalculatorKeyboard Grid.Row="1"/>
    </userControls:PopupEx>
  </Grid>
</Window>
